<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find my_edu_rover_description)/urdf/wheel/wheel.transmission.xacro"/>
  <xacro:include filename="$(find my_edu_rover_description)/urdf/wheel/wheel.gazebo.xacro"/>
  
  <xacro:macro name="wheel" params="number xyz rpy">
	<joint name="wheel_${number}_joint" type="continuous">
	  <origin xyz = "${xyz}" rpy = "${rpy}"/>
	  <parent link="knuckle_${number}_link"/>
	  <child link="wheel_${number}_link"/>
         <limit effort="1.5" velocity="20"/>
	  <axis xyz = "0 1 0"/>
	</joint>

	<link name="wheel_${number}_link">
	  <visual>
		<geometry>
		  <mesh filename="package://my_edu_rover_description/models/wheel.STL"/>
		</geometry>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="package://my_edu_rover_description/models/wheel.STL"/>
		</geometry>
	  </collision>
	  <inertial>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <mass value = "0.038593"/>
		<inertia ixx = "1.5759e-05" ixy = "0.0" ixz = "0.0" iyy = "1.5759e-05" iyz = "0.0" izz = "3.0874e-05"/>
	  </inertial>
	</link>
  </xacro:macro>
  
</robot>

